                "right": "20px",
                "bottom": "10px",
                "left": "20px"
            }
        },
        "buttonMargin": {
            "type": "object",
            "default": {
                "top": "20px",
                "right": "0px",
                "bottom": "20px",
                "left": "0px"
            }
        },
        "zIndex": {
            "type": "number",
            "default": 1
        },
        "borderRadius": {
            "type": "number",
            "default": 0
        },
        "fontWeight": {
            "type": "string",
            "default": "500"
        },
        "borderWidth": {
            "type": "number",
            "default": 2
        },
        "borderColor": {
            "type": "string",
            "default": "#ff4242"
        },
        "borderStyle": {
            "type": "string",
            "default": "solid"
        }
    }
